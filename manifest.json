{
  "manifest_version": 3,
  "name": "Video Companion",
  "version": "1.1.0",
  "description": "增强网页视频播放体验 - 画中画、全屏、倍速控制等",
  "minimum_chrome_version": "122",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "public/icons/icon16.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "public/icons/icon16.png",
      "48": "public/icons/icon48.png"
    },
    "default_title": "Video Companion"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["public/icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "toggle-pip": {
      "suggested_key": {
        "default": "Alt+P",
        "mac": "Alt+P"
      },
      "description": "切换画中画模式"
    },
    "toggle-fullscreen": {
      "suggested_key": {
        "default": "Alt+Shift+F",
        "mac": "Alt+Shift+F"
      },
      "description": "切换全屏模式"
    },
    "speed-up": {
      "suggested_key": {
        "default": "Alt+Shift+Period",
        "mac": "Alt+Shift+Period"
      },
      "description": "加速播放"
    },
    "speed-down": {
      "suggested_key": {
        "default": "Alt+Shift+Comma",
        "mac": "Alt+Shift+Comma"
      },
      "description": "减速播放"
    }
  }
}
